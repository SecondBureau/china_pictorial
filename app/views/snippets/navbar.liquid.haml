%header.navbar.navbar-default.navbar-fixed-top.bs-docs-nav{id: 'top', role:'banner'}
  .container
    
    .navbar-header
      %button.navbar-toggle.collapsed{type: "button", data: {toggle: "collapse", target: ".bs-navbar-collapse"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: '/'}{{ site.name }}
    
    %nav.collapse.navbar-collapse.bs-navbar-collapse
      %ul.nav.navbar-nav  
        {% nav "site", no_wrapper: true, active_class: "active" %}
      %ul.nav.navbar-nav.navbar-right.hidden-sm.hidden-xs
        %a.navbar-subscribe{href: '/subscription'}
          %img{src: "{{ 'mockup/subscribe.png' | theme_image_url | resize: 'x40'}}", alt: 'subscribe now!'} 